<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.use.drivers.Splash" android:background="#e3f3f9">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВОЙТИ"
            android:id="@+id/button" android:layout_gravity="center" android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView" android:layout_alignEnd="@+id/textView"
            android:textSize="20dp" android:onClick="onClick"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:id="@+id/textView"
            android:text="код авторизации" android:layout_above="@+id/editText" android:layout_centerHorizontal="true"
            android:autoText="false" android:gravity="center_vertical|center_horizontal" android:textSize="25dp"
            />
    <EditText
            android:layout_width="123dp"
            android:layout_height="40dp" android:layout_gravity="center" android:id="@+id/editText"
            android:layout_above="@+id/button" android:layout_alignStart="@+id/button"
            android:gravity="center_vertical|center_horizontal" android:layout_alignEnd="@+id/textView"
            android:textSize="20dp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="6"/>
</RelativeLayout>
